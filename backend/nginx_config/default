server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.php

    server_name 0.0.0.0;

    location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }

    location ~ \.php$  {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.2-fpm.sock;
    }

    location ~ /\.ht {
        deny all;
    }
}